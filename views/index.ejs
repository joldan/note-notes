<%- include('./partials/header') %>
<title>Awesome Notepad</title>
</head>

<body>
    <h1>Welcome to your new app for things like this</h1>
    <form action="/new-note" method="GET">
        <button type="submit" class="navButton">New Note</button>
    </form>
    <div class="card-wrapper">
        <% for (note of notes) { %>
            <div class="card-note">
                <h2> <%= note.title %> </h2>
                <div class="content-box"> <%= note.content %> </div>
                <form action="/edit-note/<%= note.id %>" method="GET">
                    <button type="submit" class="myEditButton"> Edit </button>
                </form>
                <form action="/delete-note" method="POST">
                    <button type="submit" class="myRemoveButton"> Destroy </button>
                    <input type="hidden" name="noteId" value=<%= note.id %> >
                </form>
            </div>
        <% } %>
    </div>
</body>
<%- include('./partials/footer') %>